{
  "openapi": "3.1.0",
  "info": {
    "title": "LektorView API",
    "description": "API for uploading text comparisons and generating visualizations.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://lektorview.chrustek.studio"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT" 
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/comparisons": {
      "post": {
        "operationId": "uploadComparison",
        "summary": "Upload Text Comparison",
        "description": "Uploads original and corrected text to generate a visual comparison link.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "originalText": {
                    "type": "string"
                  },
                  "correctedText": {
                    "type": "string"
                  },
                  "changeLog": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": { "type": "string" },
                        "originalSnippet": { "type": "string" },
                        "correctedSnippet": { "type": "string" },
                        "comment": { "type": "string" }
                      }
                    }
                  }
                },
                "required": ["originalText", "correctedText"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Comparison created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "slug": { "type": "string" },
                    "shareUrl": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
